<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory
		android:title="@string/api_settings">
		<EditTextPreference
			android:key="api_key"
			android:title="@string/api_key_title"
			android:summary="@string/api_key_summary"
			android:dialogTitle="@string/api_key_dialog_title" />
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/notifications">
		<SwitchPreferenceCompat
			android:key="enable_notifications"
			android:title="@string/notification_title"
			android:summary="@string/notification_summary"
			android:defaultValue="true" />

		<Preference
			android:key="notification_time"
			android:title="@string/notification_time_title"
			android:summary="@string/notification_time_summary" />
	</PreferenceCategory>

</androidx.preference.PreferenceScreen>
